@model IEnumerable<MovieViewModel>

@{
    ViewBag.Title = "All Movies";
}

<div class="text-center row">
    @foreach (var movie in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 18rem;"
             src="@movie.ImageURL" alt="Movie Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@movie.Title</h5>
                
                <p class="mb-0">Rating: @movie.Rating</p>
                
            </div>

            <form class="input-group-sm" asp-route-movieId="@movie.Id" asp-controller="Movies" asp-action="Details" method="get">
                <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>
