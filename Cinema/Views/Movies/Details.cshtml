@model MovieViewModel

@{
    ViewBag.Title = "Movie Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="text-center row">
    
          <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@Model.ImageURL" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@Model.Title</h5>
                <p class="mb-0">Director: @Model.Director</p>
                <p class="mb-0">Rating: @Model.Rating</p>
                <p>Genre: @Model.Genre</p>
            </div>

            <form class="input-group-sm" asp-route-movieId="@Model.Id" asp-controller="Movies" asp-action="RemoveFromCollection" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Mark as Unwatched" />
            </form>
        </div>
    
</div>