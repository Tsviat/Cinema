@using Cinema.Core.Models.Projection
@model AddProjectionViewModel

@{
    ViewBag.Title = "Add Projection";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">           
            <div class="mb-3">
                <label asp-for="@Model.MovieId" class="form-label">Movie</label>
                <select asp-for="@Model.MovieId" class="form-control">
                    @foreach (var movie in Model.Movies)
                    {
                        <option value="@movie.Id">@movie.Title</option>
                    }
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HallId" class="form-label">Hall</label>
                <select asp-for="@Model.HallId" class="form-control">
                    @foreach (var hall in Model.Halls)
                    {
                        <option value="@hall.Id">@hall.Name</option>
                    }
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StartMovie" class="form-label">StartMovie</label>
                <input asp-for="@Model.StartMovie" class="form-control" aria-required="true" />
                <span asp-validation-for="StartMovie" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}